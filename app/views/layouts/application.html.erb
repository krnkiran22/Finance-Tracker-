<!DOCTYPE html>
<html>
  <head>
    <title>Finance Tracker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>
  <body class="bg-gray-100">
    <nav class="bg-blue-600 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-xl font-bold">Finance Tracker</h1>
        <div>
          <% if user_signed_in? %>
            <%= link_to "Dashboard", root_path, class: "mr-4 hover:underline" %>
            <%= link_to "Categories", categories_path, class: "mr-4 hover:underline" %>
            <%= link_to "Transactions", transactions_path, class: "mr-4 hover:underline" %>
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "hover:underline" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "mr-4 hover:underline" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "hover:underline" %>
          <% end %>
        </div>
      </div>
    </nav>
    <div class="container mx-auto p-4">
      <% if notice %>
        <p class="bg-green-100 text-green-800 p-2 mb-4 rounded"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="bg-red-100 text-red-800 p-2 mb-4 rounded"><%= alert %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>